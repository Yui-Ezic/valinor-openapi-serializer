{
    "name": "yui-ezic/valinor-openapi-serializer",
    "description": "Serialize/Deserialize parameters to/from objects by openapi specification with valinor",
    "keywords": ["php", "package", "valinor", "openapi"],
    "license": "MIT",
    "authors": [
        {
            "name": "Mykhailo Zuiev",
            "email": "mishan221199@gmail.com"
        }
    ],
    "require": {
        "php": "^8.3.0",
        "cuyz/valinor": "^1.12"
    },
    "autoload": {
        "psr-4": {
            "YuiEzic\\ValinorOpenapiSerializer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": "phpunit --colors=always",
        "fixcs": "tools/php-cs-fixer/vendor/bin/php-cs-fixer fix -v",
        "checkstyle": "tools/php-cs-fixer/vendor/bin/php-cs-fixer fix -v --dry-run --format=checkstyle"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.2"
    }
}
